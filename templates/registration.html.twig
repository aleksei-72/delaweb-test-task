<div class="px-4 d-flex align-items-center" style="height: 100vh; min-height: 602px">
    <form class="d-block mx-auto form-container border px-3 pb-4">

        <h2 class="mt-4">Регистрация</h2>

        <div class="row">
            <div class="col-sm-4 mt-3">
                <label for="input-first-name" class="form-label">Имя</label>
                <input type="text" class="form-control" id="input-first-name" pattern="^[а-яА-Я]{1,25}$" required>
            </div>

            <div class="col-sm-8 mt-3">
                <label for="input-last-name" class="form-label">Фамилия</label>
                <input type="text" class="form-control" id="input-last-name" pattern="^[а-яА-Я]{1,25}$" required>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 mt-3">
                <label for="input-phone" class="form-label">Телефон</label>
                <input type="tel" class="form-control" id="input-phone" pattern="^[0-9]{6,15}$" required>
                <p class="error-text d-none" id="label-error-phone-dont-unique">Этот номер телефона уже используется</p>
            </div>

            <div class="col-sm-8 mt-3">
                <label for="input-invitatory" class="form-label">Приглашение оформил</label>

                <select class="form-control" id="input-invitatory" required>
                    {% for user in users %}
                        <option value="{{ user.id }}">{{ user.first_name }} {{ user.last_name }} ({{ user.phone }})</option>
                    {% endfor %}
                </select>
                <p class="error-text d-none" id="label-error-invitatory-not-found">Данный пользователь был удален</p>
            </div>
        </div>

        <div class="mt-3">
            <label for="input-organization" class="form-label">Название организации</label>
            <input type="text" class="form-control" id="input-organization" minlength="5" maxlength="50" required>
        </div>

        <div class="mt-3">
            <label for="input-password1" class="form-label">Пароль</label>
            <input type="password" class="form-control" id="input-password1" pattern="[0-9a-zA-Z!@#$%^&*]{6,}" required>
        </div>

        <div class="mt-3">
            <label for="input-password2" class="form-label">Повторите пароль</label>
            <input type="password" class="form-control" id="input-password2" pattern="[0-9a-zA-Z!@#$%^&*]{6,}" required>
            <p class="error-text d-none" id="label-error-password-dont-match">Пароли не совпадают</p>
        </div>

        <div class="mt-3 row">
            <div class="col-sm-4">
                <button type="submit" class="btn btn-primary" id="submit-btn">Регистрация</button>
            </div>

            <div class="col-sm-8" style="text-align: right">
                <p class="pt-3 mb-0">Уже есть аккаунт? <label><a href="/login">Авторизация</a></label></p>
            </div>
        </div>

    </form>
</div>

<script src="/asset/script/registration.js" defer></script>

